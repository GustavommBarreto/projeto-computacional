void imprime_senha(const char vet[], int tamanhovet){
	int i;
	int n;
	int quantidade;
	cout << "Quantidade de caracteres" << endl;
	cin >> quantidade;
	
	for(int n = 0; n<quantidade; n++){
		cout << vet[rand()%tamanhovet];
	}
}
